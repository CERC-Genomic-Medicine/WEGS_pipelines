   gatkContainer = "/lustre03/project/rrg-vmooser/praveen/tools/GATK/gatk.sif" 
   gatkBundle = "/lustre03/project/def-vmooser/praveen/ExomePlus/VariantCalling/GATK_bundle/GRCh38"
