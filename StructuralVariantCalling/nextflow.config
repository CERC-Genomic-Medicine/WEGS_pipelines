params {
   inputFiles = "/path/to/inputfiles/*bam" // (or cram)
   inputFileType = "bam"
   doCramToBam = false
   bamsFolder ="/path/to/bams/folder" // folder to write cram to bam files (for bam type files same as inputFiles folder)
   result = "/path/to/result/folder"
   referenceDir = "/path/to/referenceGenome/folder"
   referenceGenome = "/path/to/referenceGenome/folder/*.fa"
   genome = "hg38" (or hg19)
   scripts = "./Scripts"
   delly = "/path/to/delly_v0.9"
   manta = "/cvmfs/soft.computecanada.ca/easybuild/software/2020/avx2/MPI/gcc9/openmpi4/manta/1.6.0/bin"
   sve = "/path/to/SVE"
   lumpy = "/path/to/lumpy-sv"
   melt = "/path/to/MELTv2.2.2"
   mei = "/path/to/MELTv2.2.2/me_refs/Hg38"
   survivor = "/path/to/SURVIVOR/Debug/SURVIVOR"
   smoove = "/path/to/smoove"
   annotsv = "/path/to/AnnotSV/bin/AnnotSV"
   breakpoint_dist=1000 
   use_type=1
   use_strand=1
   dist_based=0
   min_sv_size=50

}

process {
   executor = "slurm"
   clusterOptions = "--account=rrg-vmooser"
   //executor = "local"
}

executor {
   $slurm {
      queueSize = 500
      queueStatInterval = "3min"
      pollInterval = "3min"
      submitRateLimit = "5 sec"
      jobName = { "sv_call" }
   }
   $local {
      cpus = 1
   }
}
